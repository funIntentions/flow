<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projects.view.DailyStatisticsController">
   <top>
      <HBox alignment="CENTER" spacing="8.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Date:" />
            <DatePicker fx:id="datePickerForSelectedDate" />
         </children>
         <padding>
            <Insets bottom="8.0" top="8.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Price">
            <content>
              <AnchorPane>
                     <children>
                        <LineChart fx:id="priceStatsChart" animated="false" createSymbols="false" prefHeight="400.0" prefWidth="500.0" title="Price" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                          <xAxis>
                            <CategoryAxis label="Time (Minutes)" side="BOTTOM" />
                          </xAxis>
                          <yAxis>
                            <NumberAxis label="Price ($/kWh)" side="LEFT" />
                          </yAxis>
                        </LineChart>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Emissions">
            <content>
              <AnchorPane>
                     <children>
                        <LineChart fx:id="emissionStatsChart" animated="false" createSymbols="false" prefHeight="400.0" prefWidth="500.0" title="Emissions" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                          <xAxis>
                            <CategoryAxis label="Time (Minutes)" side="BOTTOM" />
                          </xAxis>
                          <yAxis>
                            <NumberAxis label="g/kWh" side="LEFT" />
                          </yAxis>
                        </LineChart>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="Demand">
              <content>
                <AnchorPane>
                     <children>
                        <LineChart fx:id="demandStatsChart" animated="false" createSymbols="false" prefHeight="400.0" prefWidth="500.0" title="Demand" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                          <xAxis>
                            <CategoryAxis label="Time (Minutes)" side="BOTTOM" />
                          </xAxis>
                          <yAxis>
                            <NumberAxis label="Watts" side="LEFT" />
                          </yAxis>
                        </LineChart>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
