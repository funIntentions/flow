<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projects.view.DailyStatisticsController">
   <top>
      <HBox alignment="CENTER" spacing="8.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Date:" />
            <DatePicker fx:id="datePickerForSelectedDate" />
         </children>
         <padding>
            <Insets bottom="8.0" top="8.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <LineChart fx:id="priceStatsChart" animated="false" createSymbols="false" title="Price">
              <xAxis>
                <CategoryAxis label="Time (Minutes)" side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis label="Price ($/kWh)" side="LEFT" />
              </yAxis>
            </LineChart>
            <LineChart fx:id="emissionStatsChart" animated="false" createSymbols="false" title="Emissions">
              <xAxis>
                <CategoryAxis label="Time (Minutes)" side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis label="g/kWh" side="LEFT" />
              </yAxis>
            </LineChart>
            <LineChart fx:id="demandStatsChart" animated="false" createSymbols="false" title="Demand">
              <xAxis>
                <CategoryAxis label="Time (Minutes)" side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis label="Watts" side="LEFT" />
              </yAxis>
            </LineChart>
         </children>
      </HBox>
   </center>
</BorderPane>
