<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane minHeight="180.0" prefHeight="180.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projects.view.SimulationControlsController">
    <top>
        <HBox alignment="CENTER" spacing="8.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Time:" />
                <Label fx:id="timeLabel" text="00:00:00" />
                <Label text="Current Date: " />
                <Label fx:id="dateLabel" text="00/00/00" />
            </children>
            <padding>
                <Insets bottom="8.0" top="8.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <HBox alignment="CENTER" spacing="8.0" BorderPane.alignment="CENTER">
            <children>
                <GridPane vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Start Date:" />
                        <DatePicker fx:id="datePickerForStartDate" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets bottom="8.0" top="8.0" />
                            </GridPane.margin>
                        </DatePicker>
                    </children>
                </GridPane>
                <GridPane vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="End Date:" />
                        <DatePicker fx:id="datePickerForEndDate" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets bottom="8.0" top="8.0" />
                            </GridPane.margin>
                        </DatePicker>
                    </children>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </GridPane>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </HBox>
    </center>
    <bottom>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER">
                    <children>
                        <Label text="Update Rate: ">
                            <padding>
                                <Insets left="8.0" />
                            </padding>
                        </Label>
                        <ComboBox fx:id="updateRate">
                            <HBox.margin>
                                <Insets right="8.0" top="8.0" />
                            </HBox.margin>
                        </ComboBox>
                    </children>
                    <VBox.margin>
                        <Insets top="8.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" spacing="8.0">
                    <children>
                        <Button fx:id="runButton" mnemonicParsing="false" onAction="#handleRun" text="Run" />
                        <Button fx:id="pauseButton" mnemonicParsing="false" onAction="#handlePause" text="Pause" />
                        <Button fx:id="resetButton" mnemonicParsing="false" onAction="#handleReset" text="Reset" />
                    </children>
                    <padding>
                        <Insets bottom="8.0" top="8.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>
